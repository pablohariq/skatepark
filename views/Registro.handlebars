    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

      <form action="submit" method="POST" enctype="multipart/form-data" >
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input name="email" class="form-control m-auto" value="correo@correo.com" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input name="nombre" class="form-control m-auto" value="Tony Hawk" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input name="password" type="password" class="form-control m-auto"  />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input name="passwordconfirm" type="password" class="form-control m-auto" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input name="anosExperiencia" class="form-control m-auto" value="12" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input name="especialidad" class="form-control m-auto" value="kickflip" />
          </div>
          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input name="fotoPerfil" type="file" />
          </div>
        </div>
        <button type="submit" class="btn btn-info mb-3">Registrarme</button>
        <p><a href="/login"> Iniciar sesiÃ³n</a></p>
      </form>
    </div>

    <script>

      const form = document.querySelector("form")
      form.addEventListener("submit", async (e) => {
        e.preventDefault()
        const inputs = document.querySelectorAll("form input")
        console.log(inputs)
        const body = new FormData(form) //nota pedagÃ³gica: usar siempre un objeto FormData() para recoger los datos de un formulario que tiene archivo + payload

        //  fotoPerfil: inputs[6].files[0] 
        // al enviar archivos mediante axios se debe usar FormData en vez de un objeto File
        console.log(body)
        await axios.post("/register", 
          body, 
          {
            Headers: {
              'Content-type': 'multipart/form-data'
            }
          })
        window.location.href = "/"

        
      })
    </script>
  </body>
