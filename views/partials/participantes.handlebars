      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
            
            {{#if admin}}
            <th scope="col">Confirmar participación</th>

            {{/if}}
          </tr>
        </thead>
        <tbody>
          {{#each skaters}}

          <tr>
            <th scope="row">{{inc @index}}</th>
            <td><div class="container m-auto"><img class="foto-perfil "src="/pics/{{this.foto}}" alt=""></div></td>
            <td>{{this.nombre}}</td>
            <td>{{this.anos_experiencia}}</td>
            <td>{{this.especialidad}}</td>
            {{#if this.estado}}
            <td class="text-success font-weight-bold">Aprobado</td>
            {{else}}
            <td class="text-warning font-weight-bold">En revisión</td>
            {{/if}}

            {{#if ../admin}}
            <td>
                {{#if this.estado}}
                <div class="custom-control custom-switch">
                <input type="checkbox" class="form-check-input" data-email={{this.email}} onchange="actualizarParticipacion(this)" checked>
                </div>
                {{else}}
                <div class="custom-control custom-switch">
                <input type="checkbox" class="form-check-input" data-email={{this.email}} onchange="actualizarParticipacion(this)">
                </div>
                {{/if}}
           </td> 

            {{/if}}
          </tr>

          {{/each}}
        </tbody>
      </table>